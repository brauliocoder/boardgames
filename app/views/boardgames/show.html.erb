<p id="notice"><%= notice %></p>

<h1>
  <strong>Name:</strong>
  <%= @boardgame.name %>
</h1>

<h3>Board</h3>
<%= image_tag @boardgame.board.variant(resize: "100x100", colorspace: "Gray").processed %>
<%= link_to "Download", rails_blob_path(@boardgame.board, disposition: "attachment") %>

<h3>Game Images</h3>
<% @boardgame.pictures.each do |pic| %>
  <div>
    <%= image_tag pic.variant(resize: "100x100", colorspace: "Gray").processed %>
    <%= link_to "Download", rails_blob_path(pic, disposition: "attachment") %>
  </div>
<% end %>

<h3>Rules</h3>
  <%= link_to "Download Rules", rails_blob_path(@boardgame.instruction, disposition: "attachment") %>

<p>
  <strong>Rules:</strong>
  <%= @boardgame.rules %>
</p>

<%= link_to 'Edit', edit_boardgame_path(@boardgame) %> |
<%= link_to 'Back', boardgames_path %>
